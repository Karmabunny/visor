{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "karmabunny/visor",
    "description": "A supervisor for PHP-CLI servers",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "karmabunny\\visor\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "analyse": "phpstan analyse -c phpstan.neon",
        "test": "phpunit --testdox --configuration phpunit.xml"
    }
}
